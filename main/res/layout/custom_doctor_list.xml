<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:elevation="12dp"
        android:background="@drawable/shadow"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/doctorPic"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/circle1"
                android:padding="10dp"
                app:srcCompat="@drawable/doctor1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="Free: "
                    android:textStyle="italic"
                    android:textColor="@color/appbarbackgroundcolor"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/doctorPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="100"
                    android:textStyle="italic"
                    android:textColor="#000"
                    android:textSize="16dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:gravity="left|center"
                android:text="Name"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/doctoremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:textStyle="italic"
                android:text="Category"
                android:textColor="#000"
                android:textSize="14dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="Experience: "
                    android:textStyle="italic"
                    android:textColor="#7c0b73"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/experienceYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textStyle="italic"
                    android:text=" 5"
                    android:textColor="#000"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text=" year"
                    android:textStyle="italic"
                    android:textColor="#7c0b73"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textStyle="italic"
                    android:text="Distance: ("
                    android:textColor="#7c0b73"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textStyle="italic"
                    android:text=" 5.4 "
                    android:textColor="#000"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textStyle="italic"
                    android:text=") KM"
                    android:textColor="#7c0b73"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/doctorRating"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="92dp" />
                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:textStyle="italic"
                    android:textColor="#000"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/ratetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textStyle="italic"
                    android:textColor="#000"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textStyle="italic"
                    android:textColor="#000"
                    android:textSize="16dp" />
            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/next" />

    </LinearLayout>
</LinearLayout>
