<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backbackground"
    tools:context="com.example.shahidhussain.assignemnt2.Doctor.fragment_doctor_appointment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shadow"
        android:orientation="vertical">
        <TextView
            android:id="@+id/appointmentstatus1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Appointments"
            android:textStyle="italic"
            android:textSize="26dp" />

        <ListView
            android:id="@+id/appointmentlist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/appointmenttimer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:background="#fff">

        <include
            android:id="@+id/timerinclude"
            layout="@layout/timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"/>
    </LinearLayout>
</FrameLayout>
